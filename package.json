{
    "name": "@ulb-darmstadt/shacl-form",
    "version": "2.0.0-rc3",
    "description": "SHACL form generator",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/form.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/form.d.ts"
        },
        "./plugins/*": "./dist/plugins/*"
    },
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ULB-Darmstadt/shacl-form"
    },
    "author": "ULB Darmstadt",
    "license": "MIT",
    "homepage": "https://ulb-darmstadt.github.io/shacl-form/",
    "keywords": [
        "SHACL",
        "form",
        "generator",
        "RDF",
        "metadata",
        "editor",
        "viewer"
    ],
    "scripts": {
        "dev": "vite serve ./demo --host",
        "build": "npm run clean && tsc && npm run build-lib && npm run build-bundle && npm run build-plugins",
        "preview": "vite preview",
        "test": "echo \"no tests specified\" && exit 0",
        "future-test": "web-test-runner --config test/web-test-runner.config.mjs",
        "clean": "rimraf dist",
        "build-lib": "vite build  -c ./vite.config.ts",
        "build-bundle": "vite build  -c ./vite.config.bundle.ts",
        "build-plugins": "vite build -c ./vite.config.plugins.ts"
    },
    "devDependencies": {
        "@open-wc/testing": "^4.0.0",
        "@types/jsonld": "^1.5.15",
        "@types/leaflet": "^1.9.20",
        "@types/leaflet-editable": "^1.2.7",
        "@types/leaflet.fullscreen": "^3.0.3",
        "@types/mapbox__mapbox-gl-draw": "^1.4.9",
        "@types/mocha": "^10.0.10",
        "@types/n3": "^1.26.0",
        "@types/uuid": "^10.0.0",
        "@web/dev-server-esbuild": "^1.0.4",
        "@web/test-runner": "^0.20.2",
        "glob": "^11.0.3",
        "rdf-isomorphic": "^2.0.1",
        "rimraf": "^6.0.1",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "typescript": "^5.9.2",
        "vite": "^7.1.5",
        "vitest": "^3.2.4"
    },
    "peerDependencies": {
        "@ro-kit/ui-widgets": "^0.0.45",
        "jsonld": "^8.3.3",
        "leaflet": "^1.9.4",
        "leaflet-editable": "^1.3.2",
        "leaflet.fullscreen": "^4.0.0",
        "lit": "^3.3.1",
        "n3": "^1.26.0",
        "rdfxml-streaming-parser": "^3.1.0",
        "shacl-engine": "^1.0.2",
        "uuid": "^13.0.0"
    }
}
